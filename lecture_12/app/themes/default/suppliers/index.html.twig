{% extends _layout %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="page-header clearfix">
                    <h1 class="pull-left">
                        Suppliers
                        <small>List of all the suppliers</small>
                    </h1>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading clearfix">
                        <h2 class="panel-title pull-left">
                            Suppliers
                        </h2>

                        <div class="btn-group pull-right">
                            <a href="{{ site_url('suppliers/export') }}" class="btn btn-primary btn-xs">
                                <i class="fa fa-download"></i> Export to xls
                            </a>
                            <a href="{{ site_url('suppliers/add') }}" class="btn btn-success btn-xs">
                                <i class="fa fa-plus"></i> Create a supplier
                            </a>
                        </div>
                    </div>
                    <div class="panel-body">
                        {{ table.render() }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}